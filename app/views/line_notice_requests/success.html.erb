<div class="header">
  <div class="header-title-part">
    <h1>
      <% if shop_logo_url(@reservation.shop, "260") %>
        <%= image_tag shop_logo_url(@reservation.shop, "260"), class: "logo" %>
      <% else %>
        <%= @reservation.shop.name %>
      <% end %>
    </h1>
  </div>
</div>

<div class="done-view">
  <div class="text-center mb-8">
    <div class="mb-3">
      <svg xmlns="http://www.w3.org/2000/svg" class="inline-block h-10 w-10 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    </div>
    <h2 class="text-xl font-bold mb-2"><%= t("line_notice_requests.success.title") %></h2>
  </div>

  <div class="mb-8">
    <div class="mb-6 p-5 bg-white rounded-lg border border-gray-200 shadow-sm">
      <div style="line-height: 1.8; color: #374151;">
        <%= t("line_notice_requests.success.description_html", shop_name: @reservation.shop.name).html_safe %>
      </div>
    </div>

    <div class="p-4 bg-green-50 border-l-4 border-green-500 rounded">
      <div style="line-height: 1.8; color: #065f46;">
        <%= t("line_notice_requests.success.notice_html").html_safe %>
      </div>
    </div>
  </div>

  <div class="mb-8 p-4 bg-gray-50 rounded-lg border border-gray-200">
    <h3 class="font-semibold mb-3 text-gray-700" style="font-size: 16px;"><%= t("common.reservation_details") %></h3>
    <div class="text-gray-800" style="line-height: 1.8;">
      <%= @reservation.booking_time %><br />
      <%= @reservation.menus_sentence %>
    </div>
  </div>

  <div class="mb-3">
    <%= link_to t("line_notice_requests.success.back_to_reservation"), 
        shop_reservation_path(@reservation.shop, @reservation), 
        class: "btn btn-tarco btn-lg w-100",
        style: "padding: 12px 24px; font-size: 16px;" %>
  </div>

  <% if @reservation.reservation_customers.first&.booking_page&.deleted_at.nil? %>
    <div class="text-center">
      <%= link_to t("booking_page.done.back_to_book"), 
          subdomain_booking_page_url(@reservation.reservation_customers.first.booking_page.id, subdomain: 'booking'), 
          class: "btn btn-link text-gray-600",
          style: "text-decoration: none;" %>
    </div>
  <% end %>
</div>

