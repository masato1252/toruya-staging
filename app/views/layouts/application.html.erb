<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <title>Toruyaースモールビジネスの顧客管理ツールー</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <%= stylesheet_packs_with_chunks_tag "stylesheets" %>
    <%= javascript_packs_with_chunks_tag "application" %>
  </head>

  <body id="manager" class='<%= body_class %>' data-controller="atomic-requests">
    <% if in_personal_dashboard? %>
      <%= render "layouts/dashboard_header_bar" %>
    <% elsif shop %>
      <%= render "layouts/shop_dashboard_header_bar" %>
    <% else %>
      <%= render "layouts/dashboard_header_bar" %>
    <% end %>

    <%= flash_messages %>
    <%= yield %>
    <%= render "layouts/upgrade_modals" %>
  </body>
</html>
