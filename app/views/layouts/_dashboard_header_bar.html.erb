<header>
  <dl>
    <dd id="NAVstaffDashboard">
      <%= link_to root_path do %>
        <i class="fa fa-desktop" aria-hidden="true"></i>
        HOME
      <% end %>
    </dd>
    <dd id="NAVtoday">
      <%= link_to shop_reservations_path(shop) do %>
        <i class="fa fa-home fa-4x" aria-hidden="true"></i>
        今日
      <% end %>
    </dd>
    <% if local_assigns[:shops_selector].present? %>
      <dd id="NAVshopSelect">
        <%= shops_select_component %>
      </dd>
    <% end %>
  </dl>
  <dl>
    <dd>
      <%= link_to settings_shops_path, class: "setting" do %>
        <i class="fa fa-cog fa-4x" aria-hidden="true"></i>
        設定
      <% end %>
    </dd>
    <dd>
      <%= link_to destroy_user_session_path, method: "delete", class: "setting" do %>
        <i class="fa fa-power-off fa-4x" aria-hidden="true"></i>
        <%= t("action.log_out") %>
      <% end %>
    </dd>
  </dl>
</header>
