<header>
  <dl>
    <dt>
      <h1>
        <%= link_to "Toruya", root_path %>
      </h1>
    </dt>
    <dd id="NAVtoday">
      <%= active_link_to (local_assigns[:today_path] || (respond_to?(:shop) && shop && shop_reservations_path(shop)) || root_path), active: [["reservations"], []], class_active: "here" do %>
        <i class="fa fa-calendar fa-4x" aria-hidden="true"></i>
        今日
      <% end %>
    </dd>
    <% if local_assigns[:shops_selector].present? %>
      <dd id="NAVshopSelect">
        <%= shops_select_component %>
      </dd>
      <% if can? :swith_staffs_selector, User %>
        <dd id="NAVshopSelect">
          <%= staffs_select_component %>
        </dd>
      <% end %>
    <% end %>
  </dl>
  <dl>
    <% if controller_name != "home" && super_user %>
      <dd>
        <%= active_link_to settings_user_shops_path(super_user), active: /^\/settings/, class_active: "here" do %>
          <i class="fa fa-cog fa-4x" aria-hidden="true"></i>
          設定
        <% end %>
      </dd>
    <% end %>
    <dd>
      <%= link_to destroy_user_session_path, method: "delete", class: "setting" do %>
        <i class="fa fa-power-off fa-4x" aria-hidden="true"></i>
        <%= t("action.log_out") %>
      <% end %>
    </dd>
  </dl>
</header>
