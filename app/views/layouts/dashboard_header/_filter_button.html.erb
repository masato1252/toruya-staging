<dd>
  <% if ability(super_user, shop).can?(:read, :filter) %>
    <%= active_link_to customer_user_filter_index_path(super_user), active: /^\/customer\/users\/\d+\/filter/, class_active: "here" do %>
      <i class="fa fa-database fa-4x" aria-hidden="true"></i>
      <%= t("dashboard.search_data") %>
    <% end %>
  <% elsif ability(super_user, shop).admin? %>
    <%= modal_link_to(admin_upgrade_filter_modal_warnings_path) do %>
      <i class="fa fa-database fa-4x" aria-hidden="true"></i>
      <%= t("dashboard.search_data") %>
    <% end %>
  <% else %>
    <%= modal_link_to(filter_dashboard_for_staff_warnings_path) do %>
      <i class="fa fa-database fa-4x" aria-hidden="true"></i>
      <%= t("dashboard.search_data") %>
    <% end %>
  <% end %>
</dd>
