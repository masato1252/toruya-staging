<%= content_for :meta_tags do %>
  <meta name="robots" content="noindex">
  <meta name="googlebot" content="noindex">
<% end %>

<% if @service_member && @service_member.available? %>
  <%= render "online_services/available_service_customer", online_service: @online_service, service_member: @service_member, online_service_hash: @online_service_hash, episode: @episode %>
<% elsif @service_member && !@service_member.available? %>
  <%= render "online_services/unavailable_service_customer", service_member: @service_member, online_service_hash: @online_service_hash %>
<% elsif current_customer %>
  <%= render "online_services/unavailable_customer", online_service_hash: @online_service_hash %>
<% else %>
  <%= render "online_services/guest", online_service_hash: @online_service_hash %>
<% end %>
