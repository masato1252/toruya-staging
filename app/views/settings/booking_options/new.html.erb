<div id="subNav">
  <h2>基本情報 − <%= t("settings.shop.new_title")%></h2>
</div>
<div id="about">
  <p><%= t("settings.shop.new_info_1") %><br /><%= t("settings.shop.new_info_2") %></p>
</div>

<div id="settingForm">
  <%= react_component("settings/booking/booking_option_settings", {
    formAuthenticityToken: form_authenticity_token,
    bookingOption: @booking_option,
    path: {
      cancel: settings_user_booking_options_path(super_user),
      save: @booking_option.new_record? ? settings_user_booking_options_path(super_user) : settings_user_booking_option_path(super_user, @booking_option)
    },
    i18n: {
      cancel_btn: I18n.t("action.cancel"),
      errors: {
        required: I18n.t("errors.messages.required")
      }
    }
  })%>
</div>
