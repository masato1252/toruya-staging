<div id="subNav">
  <h2><%= t("settings.social_account.info_title") %></h2>
</div>
<div id="about">
  <% if @social_accounts.size.zero? %>
    <ul class="function">
      <li>
        <%= link_to t("settings.social_account.new_button"), new_settings_user_social_account_path(super_user), class: "BTNyellow addNew" %>
      </li>
    </ul>
    <p><%= t("settings.social_account.info_1") %><br /><%= t("settings.social_account.info_2") %></p>
  <% end %>
</div>

<div id="settingForm">
  <div id="menuList" class="formRow">
    <ul class="tableTTL">
      <li class="rowTTL"><%= t("settings.social_account.name") %></li>
      <li class="updateTime"><%= t("common.updated_time") %></li>
    </ul>
    <% @social_accounts.each do |social_account| %>
      <dl>
        <dt class="rowTTL"><%= link_to social_account.label, edit_settings_user_social_account_path(super_user, social_account) %></dt>
        <dd class="updateTime"><%= social_account.updated_at.to_s(:date) %></dd>
        <dd class="function">
          <%= link_to t("action.edit"), edit_settings_user_social_account_path(super_user, social_account), class: "BTNtarco" %>
          <%= link_to t("action.delete"), settings_user_social_account_path(super_user, social_account), class: "BTNorange", method: :delete, data: { confirm: I18n.t("common.are_you_sure_message") } %>
        </dd>
      </dl>
    <% end %>
  </div>
</div>
