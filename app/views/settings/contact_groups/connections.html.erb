  <div id="subNav">
    <h2><%= t("settings.contact.google_account_synchronization") %></h2>
  </div>
  <div id="about">
    <p>Please sync your google account and the google group you want here.</p>
  </div>

  <form>
    <h1><%= t("settings.contact.info_title") %>: <%= @contact_group.name %></h1>
    <%= t("settings.contact.connection_binding_desc") %>
    <div id="customize-table" class="formRow table">
      <dl class="header">
        <dd><%= t("settings.contact.google_group_name") %></dd>
      </dl>
      <% @google_groups.each do |google_group| %>
        <dl class="body">
          <dd><%= google_group.title %></dd>
          <dd>
            <%= link_to t("settings.contact.bind_btn"),
              bind_settings_contact_group_path(@contact_group,
                                               google_group_id: google_group.id,
                                               google_group_name: google_group.title), method: :post, class: "btn btn-success",
                                               data: { confirm: t("settings.contact.binding_confirmation_message",
                                                                  google_group_name: google_group.title,
                                                                  contact_group_name: @contact_group.name),
                                                       disable_with: t("common.processing") } %>
          </dd>
        </dl>
      <% end %>
    </div>
    <hr />
    <% if @google_groups.present? %>
      <h2>
        <%= t("settings.contact.dont_want_connect_google") %>
      </h2>
    <% end %>
    <%= link_to t("settings.contact.only_use_toruya_group"), bind_settings_contact_group_path(@contact_group),
      method: :post,
      class: "btn btn-success",
        data: { confirm: t("settings.contact.only_use_toruya_group_confirmation"), disable_with: t("common.processing") } %>
  </form>
