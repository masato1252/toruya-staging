<div id="subNav">
  <h2>基本情報 − <%= t("settings.category.new_title") %></h2>
</div>
<div id="about">
  <p><%= t("settings.category.new_info_1") %><br /><%= t("settings.category.new_info_2") %></p>
</div>

<div id="settingForm">
  <%= form_for(category, url: url) do |f| %>
    <%= render "settings/form_errors", object: category %>

    <h3><%= t("settings.category.info_label") %><strong>必須項目</strong></h3>
    <div id="menuInfo" class="formRow">
      <dl>
        <dt>カテゴリー名</dt>
        <dd>
          <%= f.text_field :name, max_length: 30 %>
        </dd>
      </dl>
    </div>
    <ul id="footerav">
      <li>
        <%= link_to t("action.cancel"), settings_user_categories_path(super_user), class: "BTNtarco" %>
      </li>
      <li>
        <%= f.submit "保存", class: "BTNyellow" %>
      </li>
    </ul>
  <% end %>
</div>
