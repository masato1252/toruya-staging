<div id="subNav">
  <h2>基本情報 − <%= t("settings.category.info_title") %></h2>
</div>
<div id="about">
  <ul class="function">
    <li>
      <%= link_to t("settings.category.new_button"), new_settings_category_path, class: "BTNyellow addNew" %>
    </li>
  </ul>
  <p><%= t("settings.category.info_1") %><br /><%= t("settings.category.info_2") %></p>
</div>
<form>
  <div id="menuList" class="formRow">
    <ul class="tableTTL">
      <li class="check"><%= t("action.delete") %></li>
      <li class="rowTTL"><%= t("settings.category.name") %></li>
      <li class="updateTime"><%= t("common.updated_time") %></li>
    </ul>
    <% @settings_categories.each do |settings_category| %>
      <dl>
        <dt class="check">
          <%= link_to t("action.delete"), settings_category_path(settings_category), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </dt>
        <dt class="rowTTL"><%= settings_category.name %></dt>
        <dd class="updateTime"><%= settings_category.updated_at.to_s(:date) %></dd>
        <dd class="function">
          <%= link_to t("action.edit"), edit_settings_category_path(settings_category), class: "BTNtarco" %>
        </dd>
      </dl>
    <% end %>
  </div>
</form>
