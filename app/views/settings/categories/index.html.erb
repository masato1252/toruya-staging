<div id="subNav">
  <h2>基本情報 − <%= t("settings.category.info_title") %></h2>
</div>
<div id="about">
  <ul class="function">
    <li>
      <%= link_to t("settings.category.new_button"), new_settings_user_category_path(super_user), class: "BTNyellow addNew" %>
    </li>
  </ul>
  <p><%= t("settings.category.info_1") %><br /><%= t("settings.category.info_2") %></p>
</div>

<div id="settingForm">
  <div id="menuList" class="formRow">
    <ul class="tableTTL">
      <li class="rowTTL"><%= t("settings.category.name") %></li>
      <li class="updateTime"><%= t("common.updated_time") %></li>
    </ul>
    <% @settings_categories.each do |settings_category| %>
      <dl>
        <dt class="rowTTL"><%= link_to settings_category.name, edit_settings_user_category_path(super_user, settings_category) %></dt>
        <dd class="updateTime"><%= settings_category.updated_at.to_fs(:date) %></dd>
        <dd class="function">
          <%= link_to t("action.edit"), edit_settings_user_category_path(super_user, settings_category), class: "BTNtarco" %>
          <%= link_to t("action.delete"), settings_user_category_path(super_user, settings_category), class: "BTNorange", method: :delete, data: { confirm: I18n.t("common.are_you_sure_message") } %>
        </dd>
      </dl>
    <% end %>
  </div>
</div>
