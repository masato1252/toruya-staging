<div id="subNav">
  <h2>基本情報 − <%= t("settings.business_hours.info_title") %></h2>
</div>
<div id="about">
  <p><%= t("settings.business_hours.info_1") %><br /><%= t("settings.business_hours.info_2") %></p>
</div>
<form>
  <div id="shopList" class="formRow">
    <ul class="tableTTL">
      <li class="rowTTL"><%= t("settings.shop.name") %></li>
      <li class="updateTime"><%= t("common.updated_time") %></li>
    </ul>
    <% super_user.shops.order("id").each do |shop| %>
      <dl>
        <dt class="rowTTL"><%= shop.name %></dt>
        <dd class="updateTime"><%= shop.updated_at.to_s(:date) %></dd>
        <dd class="function">
          <%= link_to t("action.edit"), edit_settings_shop_business_schedules_path(shop), class: "BTNtarco" %>
        </dd>
      </dl>
    <% end %>
  </div>
</form>
