<div id="subNav">
  <h2><%= Staff.model_name.human %> − 勤務日時</h2>
</div>
<div id="about">
  <p><%= t("settings.staff_working_time.info_1.#{params[:mode] || @mode}") %><br /><%= t("settings.staff_working_time.info_2") %></p>
</div>

<%= content_tag(:div, id: "settingForm", data: { controller: "popup-modal", popup_modal_target: "#workingTimeTourModal" }) do %>
  <div id="staffList" class="formRow">
    <ul class="tableTTL">
      <li class="rowTTL"><%= t("settings.staff.name") %></li>
      <li class="updateTime"><%= t("common.updated_time") %></li>
    </ul>
    <% staffs.each do |staff| %>
      <%
        edit_staff_path = if params[:mode] == "working_schedules"
                            working_schedules_settings_user_working_time_staff_path(super_user, staff)
                          else
                            holiday_schedules_settings_user_working_time_staff_path(super_user, staff)
                          end
      %>
      <dl>
        <dt>
          <% if can?(:edit, staff) %>
            <%= link_to staff.name, edit_staff_path %>
          <% else %>
            <%= modal_link_to(staff.name, edit_staff_for_admin_warnings_path) %>
          <% end %>
        </dt>
        <dd class="updateTime"><%= staff.updated_at.to_s(:date) %></dd>
        <dd class="function">
          <% if can?(:edit, staff) %>
            <%= link_to t("action.edit"), edit_staff_path, class: "BTNtarco" %>
          <% else %>
            <%= modal_link_to(t("action.edit"), edit_staff_for_admin_warnings_path, class: "BTNtarco") %>
          <% end %>
        </dd>
      </dl>
    <% end %>
  </div>

  <%= render "settings/tour/working_time_modal" %>
<% end %>
