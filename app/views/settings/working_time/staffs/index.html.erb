<div id="subNav">
  <h2><%= Staff.model_name.human %> − 勤務日時</h2>
</div>
<div id="about">
  <p><%= t("settings.staff_working_time.info_1") %><br /><%= t("settings.staff_working_time.info_2") %></p>
</div>

<div id="settingForm">
  <div id="staffList" class="formRow">
    <ul class="tableTTL">
      <li class="rowTTL"><%= t("settings.staff.name") %></li>
      <li class="updateTime"><%= t("common.updated_time") %></li>
    </ul>
    <% @staffs.each do |staff| %>
      <dl>
        <dt><%= link_to staff.name, edit_settings_working_time_staff_path(staff) %></dt>
        <dd class="updateTime"><%= staff.updated_at.to_s(:date) %></dd>
        <dd class="function">
          <% if params[:mode] == "working_schedules" %>
            <%= link_to t("action.edit"), working_schedules_settings_user_working_time_staff_path(super_user, staff), class: "BTNtarco" %>
          <% else %>
            <%= link_to t("action.edit"), holiday_schedules_settings_user_working_time_staff_path(super_user, staff), class: "BTNtarco" %>
          <% end %>
        </dd>
      </dl>
    <% end %>
  </div>
</div>
