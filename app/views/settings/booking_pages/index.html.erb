<div id="subNav">
  <h2><%= t("settings.booking_page.title")%></h2>
</div>
<div id="about">
  <ul class="function">
    <li>
      <%= link_to t("settings.booking_page.new_button"), new_settings_user_booking_page_path(super_user), class: "BTNyellow addNew" %>
    </li>
  </ul>
  <p><%= t("settings.booking_page.info_html") %></p>
</div>

<%= content_tag(:div, id: "settingForm") do %>
  <div id="pageList" class="formRow">
    <ul class="tableTTL">
      <li class="rowTTL"><%= t("settings.booking_page.name") %></li>
      <li class="salesFrom"><%= t("settings.booking_page.start_at") %></li>
      <li class="salesTo"><%= t("settings.booking_page.end_at") %></li>
      <li class="updateTime"><%= t("common.updated_time") %></li>
    </ul>
    <% @booking_pages.each do |booking_page| %>
      <dl>
        <dt class="rowTTL"><%= link_to booking_page.name, edit_settings_user_booking_page_path(super_user, booking_page) %></dt>
        <dd class="salesFrom"><%= l(booking_page.start_at) if booking_page.start_at %></dd>
        <dd class="salesTo"><%= l(booking_page.end_at) if booking_page.end_at %></dd>
        <dd class="updateTime"><%= l(booking_page.updated_at) %></dd>
        <dd class="function">
          <%= link_to t("action.edit"), edit_settings_user_booking_page_path(super_user, booking_page), class: "BTNtarco" %>
          <%= link_to t("action.delete"), settings_user_booking_page_path(super_user, booking_page), class: "BTNorange", method: :delete, data: { confirm: I18n.t("common.are_you_sure_message") } %>

          <% if booking_page.draft %>
            <%= link_to t("action.preview"), booking_page_path(booking_page), target: "_blank", class: "BTNgray" %>
          <% else %>
            <%= modal_link_to t("action.copy_url"), copy_modal_settings_user_booking_page_path(super_user, booking_page), class: "BTNgray" %>
          <% end %>
        </dd>
      </dl>
    <% end %>
  </div>
<% end %>
