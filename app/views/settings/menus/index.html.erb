<div id="subNav">
  <h2>基本情報 − <%= t("settings.menu.info_title") %></h2>
</div>
<div id="about">
  <ul class="function">
    <li>
      <%= link_to t("settings.menu.new_button"), new_settings_menu_path, class: "BTNyellow addNew" %>
    </li>
  </ul>
  <p><%= t("settings.menu.info_1") %><br /><%= t("settings.menu.info_2") %></p>
</div>

<form>
  <div id="menuList" class="formRow">
    <ul class="tableTTL">
      <li class="check"><%= t("action.delete") %></li>
      <li class="rowTTL"><%= t("settings.menu.name") %></li>
      <li class="rowTTL"><%= t("settings.menu.staff") %></li>
      <li class="rowTTL"><%= t("settings.menu.reservation_setting_name") %></li>
      <li class="updateTime"><%= t("common.updated_time") %></li>
    </ul>
    <% @menus.each do |menu| %>
      <dl>
        <dt class="check">
          <%= link_to t("action.delete"), settings_menu_path(menu), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </dt>
        <dt class="rowTTL"><%= menu.name %></dt>
        <dd class="staff"><%= menu.staffs.count %></dd>
        <dd class="blocks"><%= menu.reservation_setting ? menu.reservation_setting.name : "未設定" %></dd>
        <dd class="updateTime"><%= menu.updated_at.to_s(:date) %></dd>
        <dd class="function">
          <%= link_to t("action.edit"), edit_settings_menu_path(menu), class: "BTNtarco" %>
        </dd>
      </dl>
    <% end %>
  </div>
</form>
<br>

