<div id="subNav">
  <h2>基本情報 − <%= t("settings.menu.info_title") %></h2>
</div>
<div id="about">
  <ul class="function">
    <li>
      <%= link_to t("settings.menu.new_button"), new_settings_user_menu_path(super_user), class: "BTNyellow addNew" %>
    </li>
  </ul>
  <p><%= t("settings.menu.info_1") %><br /><%= t("settings.menu.info_2") %></p>
</div>

<div id="settingForm">
  <div id="menuList" class="formRow">
    <ul class="tableTTL">
      <li class="rowTTL"><%= t("settings.menu.name") %></li>
      <li class="rowTTL"><%= t("settings.menu.staff") %></li>
      <li class="rowTTL"><%= t("settings.menu.reservation_setting_name") %></li>
      <li class="updateTime"><%= t("common.updated_time") %></li>
    </ul>
    <% @menus.each do |menu| %>
      <dl>
        <dt class="rowTTL"><%= link_to menu.display_name, edit_settings_user_menu_path(super_user, menu) %></dt>
        <dd class="staff"><%= menu.active_staffs.size %></dd>
        <dd class="blocks"><%= menu.reservation_setting ? menu.reservation_setting.display_name : "未設定" %></dd>
        <dd class="updateTime"><%= menu.updated_at.to_s(:date) %></dd>
        <dd class="function">
          <%= link_to t("action.edit"), edit_settings_user_menu_path(super_user, menu), class: "BTNtarco" %>
          <%= link_to t("action.delete"), settings_user_menu_path(super_user, menu), class: "BTNorange", method: :delete, data: { confirm: I18n.t("common.are_you_sure_message") } %>
        </dd>
      </dl>
    <% end %>
  </div>
</div>
