<%= render "info" %>
<div id="about">
  <ul class="function">
    <li>
      <%= link_to t("settings.menu.new_button"), new_settings_menu_path, class: "BTNyellow addNew" %>
    </li>
  </ul>
  <p><%= t("settings.menu.info_1") %><br /><%= t("settings.menu.info_2") %></p>
</div>

<form>
  <div id="menuList" class="formRow">
    <ul class="tableTTL">
      <li class="check"><%= t("common.delete") %></li>
      <li class="rowTTL"><%= t("settings.menu.name") %></li>
      <li class="updateTime"><%= t("common.updated_time") %></li>
    </ul>
    <% @menus.each do |menu| %>
      <dl>
        <dt class="check">
          <%= link_to t("common.delete"), settings_menu_path(menu), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </dt>
        <dt class="rowTTL"><%= menu.name %></dt>
        <dd class="updateTime"><%= menu.updated_at.to_s(:date) %></dd>
        <dd class="function">
          <%= link_to t("common.edit"), edit_settings_menu_path(menu), class: "BTNtarco" %>
        </dd>
      </dl>
    <% end %>
  </div>
</form>
<br>

