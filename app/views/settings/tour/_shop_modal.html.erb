<% if session[:settings_tour] %>
  <div class="modal fade" id="shopTourModal" tabindex="-1" role="dialog" data-backdrop="static">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">
            <%= t("settings.modal.tour.shop_title") %>
          </h4>
        </div>
        <div class="modal-body">
          <iframe width="560" height="300" src="https://www.youtube.com/embed/XkclcJOHXuU" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
        </div>
        <div class="modal-footer centerize">
          <%= link_to t("settings.modal.tour.no_need"), settings_end_tour_path, class: "btn BTNtarco" %>
          <%= link_to t("settings.modal.tour.setup_shop"), "#", class: "btn BTNtarco", data: { dismiss: "modal" } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
