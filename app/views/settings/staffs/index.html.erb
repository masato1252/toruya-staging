<p id="notice"><%= notice %></p>

<h1>Staffs</h1>

<table>
  <thead>
    <tr>
      <th>Shop</th>
      <th>Name</th>
      <th>Shortname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.shop_id %></td>
        <td><%= staff.name %></td>
        <td><%= staff.shortname %></td>
        <td><%= link_to 'Show', settings_shop_staff_path(shop, staff) %></td>
        <td><%= link_to 'Edit', edit_settings_shop_staff_path(shop, staff) %></td>
        <td><%= link_to 'Destroy', settings_shop_staff_path(shop, staff), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Staff', new_settings_shop_staff_path(shop) %>
