<%= render "info" %>
<div id="about">
  <ul class="function">
    <li>
      <%= link_to t("settings.staff.new_button"), new_settings_staff_path, class: "BTNyellow addNew" %>
    </li>
  </ul>
  <p><%= t("settings.staff.info_1") %><br /><%= t("settings.staff.info_2") %></p>
</div>

<form>
  <div id="staffList" class="formRow">
    <ul class="tableTTL">
      <li class="check"><%= t("common.delete") %></li>
      <li class="rowTTL"><%= t("settings.staff.name") %></li>
      <li class="updateTime"><%= t("common.updated_time") %></li>
    </ul>
    <% @staffs.each do |staff| %>
      <dl>
        <dt class="check">
          <%= link_to t("common.delete"), settings_staff_path(staff), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </dt>
        <dt class="rowTTL">
          <%= staff.name %>
        </dt>
        <dd class="updateTime"><%= staff.updated_at.to_s(:date) %></dd>
        <dd class="function">
          <%= link_to t("common.edit"), edit_settings_staff_path(staff), class: "BTNtarco" %>
        </dd>
      </dl>
    <% end %>
  </div>
</form>
