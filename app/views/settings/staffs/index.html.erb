<%= render "info" %>
<div id="about">
  <ul class="function">
    <li>
      <%= link_to 'Add a New Staff', new_settings_staff_path, class: "BTNyellow addNew" %>
    </li>
  </ul>
  <p>Here is the list of staff you set.<br>Toruya will accept reservation based on this setting.</p>
</div>

<form>
  <div id="staffList" class="formRow">
    <ul class="tableTTL">
      <li class="check">Delete</li>
      <li class="rowTTL">Staff Name</li>
      <li class="updateTime">update time</li>
    </ul>
    <% @staffs.each do |staff| %>
      <dl>
        <dt class="check">
          <%= link_to 'DELETE', settings_staff_path(staff), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </dt>
        <dt class="rowTTL">
          <%= staff.name %>
        </dt>
        <dd class="updateTime"><%= staff.updated_at.to_s(:date) %></dd>
        <dd class="function">
          <%= link_to 'Edit', edit_settings_staff_path(staff), class: "BTNtarco" %>
        </dd>
      </dl>
    <% end %>
  </div>
</form>
