<%= form_for(staff, url: url) do |f| %>
  <% if staff.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% staff.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h3>Staff Informations<strong>必須項目</strong></h3>
  <div id="staffInfo" class="formRow">
    <dl>
      <dt>氏名</dt>
      <dd class="familyName">
        <%= f.text_field :last_name, placeholder: "Family Name" %>
      </dd>
      <dd class="firstName">
        <%= f.text_field :first_name, placeholder: true %>
      </dd>
    </dl>
    <dl>
      <dt>しめい</dt>
      <dd class="familyName">
        <%= f.text_field :jp_last_name, placeholder: "Family Name Kana" %>
      </dd>
      <dd class="firstName">
        <%= f.text_field :jp_first_name, placeholder: "First Name Kana" %>
      </dd>
    </dl>
  </div>
  <h3>Belonging Shop<strong>必須項目</strong></h3>
  <div id="belong" class="formRow">
    <%
      shop_ids = staff.shop_staffs.pluck(:shop_id)
    %>
    <% @shops.each do |shop| %>
      <dl class="checkbox">
        <dd>
          <input
            type="checkbox"
            id="shop-<%= shop.id %>"
            name="staff[shop_ids][]"
            value=<%= shop.id %>
            <%= "checked" if shop_ids.include?(shop.id) %>>
          <label for="shop-<%= shop.id %>"><%= shop.name %></label>
        </dd>
      </dl>
    <% end %>
  </div>

  <div id="footerav">
    <input type="submit" class="BTNtarco" value="Save">
  </div>
<% end %>
