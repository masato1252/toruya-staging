<div id="subNav">
  <h2><%= Staff.model_name.human %> − <%= t("settings.staff.new_title") %></h2>
</div>
<div id="about">
  <p><%= t("settings.staff.new_info_1") %><br /><%= t("settings.staff.new_info_2") %></p>
</div>

<div class="payments">
  <table class="subscription">
    <caption>Plan Information</caption>
    <tbody>
      <tr>
        <th>Current Plan</th>
        <td>
          <%= @subscription.current_plan.name %>
          <%= link_to "Change plan", settings_plans_path, class: "btn btn-yellow" %>
        </td>
      </tr>
      <tr>
        <th>Join Date</th>
        <td><%= l(current_user.created_at.to_date)%></td>
      </tr>
      <tr>
        <th>Status</th>
        <td><%= subscription_status(@subscription) %></td>
      </tr>
      <tr>
        <th>Next Billing Date</th>
        <td><%= @subscription.expired_date && l(@subscription.expired_date) if @subscription.active? && @subscription.charge_required %></td>
      </tr>
    </tbody>
  </table>

  <table class="history">
    <caption>Payment history and receipts</caption>
    <thead>
      <tr>
        <th class="charge-date">Date</th>
        <th class="charge-amount">Amount</th>
        <th class="charge-plan">Plan</th>
        <th class="charge-receipt">Receipt</th>
      </tr>
    </thead>
    <tbody>
      <% @charges.each do |charge| %>
      <tr>
        <td><%= l(charge.created_at.to_date) %></td>
        <td><%= charge.amount.format %></td>
        <td><%= charge.plan.name %> <%= "(refunded)" if charge.refunded? %></td>
        <td>
          <%= link_to "Receipt", receipt_settings_payment_path(charge, format: :pdf), target: "_blank" %>
          <%= link_to "Refund", "#", class: "btn btn-orange", data: { toggle: "modal", target: "#refund-modal" } if @refundable && @subscription.first_charge.id == charge.id %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <% if @refundable %>
    <div class="modal fade" id="refund-modal" tabIndex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">
              Refund
            </h4>
          </div>
          <div class="modal-body">
            <div>
              The refund Plan: <%= @subscription.first_charge.plan.name %>
            </div>
            <div>
              Price: <%= @subscription.first_charge.amount.format %>
            </div>
          </div>
          <div class="modal-footer">
            <%= link_to "Refund", refund_settings_payments_path, class: "btn btn-orange" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
