<dl class="staff">
  <%= active_link_to content_tag(:span, "<i class='fa fa-user-tie fa-2x'></i>&nbsp;#{t("settings.staff.sider_label")}".html_safe), settings_user_staffs_path(super_user),
    active: [[
      "settings/staffs",
      params[:working_time_menu_scope] == "staff" && "settings/working_time/staffs"]],
    wrap_tag: :dt,
    class_active: "here" %>
  <dd>
    <ul>
      <%= active_link_to t("settings.staff.info_title"), settings_user_staffs_path(super_user),
        active: [["settings/staffs"]],
        wrap_tag: :li,
        class_active: "here" %>

      <%= active_link_to t("settings.staff.all_work_time"), settings_user_working_time_staffs_path(super_user, working_time_menu_scope: :staff),
        active: /working_time_menu_scope=staff/,
        wrap_tag: :li,
        class_active: "here" %>
    </ul>
  </dd>
</dl>
