<div id="subNav">
  <h2>基本情報 − <%= t("settings.shop.new_title")%></h2>
</div>
<div id="about">
  <p><%= t("settings.shop.new_info_1") %><br /><%= t("settings.shop.new_info_2") %></p>
</div>

<div id="settingForm">
  <%= form_for(shop, url: url) do |f| %>
    <%= render "settings/form_errors", object: @outcome if @outcome %>

    <%= hidden_field_tag :token, nil, id: "stripe-token" %>
    <h3>店名</h3>
    <div id="shopNames" class="formRow">
      <dl>
        <dt>店舗名<strong>必須項目</strong></dt>
        <dd>
          <%= f.text_field :name, placeholder: true %>
        </dd>
      </dl>
      <dl>
        <dt>短縮店舗名<strong>必須項目</strong></dt>
        <dd>
          <%= f.text_field :short_name, placeholder: true %>
        </dd>
      </dl>
    </div>

    <h3>連絡先</h3>
    <div id="contacts" class="formRow">
      <dl>
        <dt><%= t("common.zip_code") %><strong>必須項目</strong></dt>
        <dd>
          <%= f.text_field :zip_code, placeholder: true %>
        </dd>
      </dl>
      <dl>
        <dt><%= t("common.address") %><strong>必須項目</strong></dt>
        <dd>
          <%= f.text_field :address, placeholder: true %>
        </dd>
      </dl>
      <dl>
        <dt><%= t("common.phone_number") %><strong>必須項目</strong></dt>
        <dd>
          <%= f.text_field :phone_number, placeholder: true %>
        </dd>
      </dl>
      <dl>
        <dt><%= t("common.email") %><strong>必須項目</strong></dt>
        <dd>
          <%= f.text_field :email, placeholder: true %>
        </dd>
      </dl>
      <dl>
        <dt>WEB</dt>
        <dd>
          <%= f.text_field :website, placeholder: true %>
        </dd>
      </dl>
    </div>

    <h3><%= t("settings.shop.logo_area.title") %></h3>
    <div class="formRow logo-area">
      <dl>
        <dd>
          <div>
            <% logo = shop_logo(shop, "390x135") %>
            <% if logo %>
              <%= logo %>
            <% else %>
              <b><%= t("settings.shop.logo_area.no_image") %></b>
            <% end %>
            <span><%= t("settings.shop.logo_area.description_about_logo") %></span>
          </div>

          <div>
            <%= f.file_field :logo, placeholder: true, accept: Shops::Update::CONTENT_TYPES.join(",") %>

            <%= f.submit t("settings.shop.logo_area.upload_button_text"), class: "btn btn-yellow", name: "route_to[logo]" %>
          </div>

          <div>
            <%= t("settings.shop.logo_area.description_about_image") %>
          </div>
        </dd>
      </dl>
    </div>

    <ul id="footerav">
      <li>
        <%= link_to t("action.cancel"), settings_user_shops_path(super_user), class: "BTNtarco" %>
      </li>
      <li>
        <% if local_assigns[:fit_shop_charge_threshold] %>
          <%= link_to "保存", "#", class: "BTNyellow", data: { toggle: "modal", target: "#upgradeModal" } %>
        <% else %>
          <%= f.submit "保存", class: "BTNyellow", name: "route_to[shop]" %>
        <% end %>
      </li>
    </ul>
  <% end %>
</div>
