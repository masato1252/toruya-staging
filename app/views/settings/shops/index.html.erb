<p id="notice"><%= notice %></p>
<h1>Shops</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Shortname</th>
      <th>Zip code</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Website</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.user_id %></td>
        <td><%= shop.name %></td>
        <td><%= shop.shortname %></td>
        <td><%= shop.zip_code %></td>
        <td><%= shop.phone_number %></td>
        <td><%= shop.email %></td>
        <td><%= shop.website %></td>
        <td><%= shop.address %></td>
        <td><%= link_to 'Show', settings_shop_path(shop) %></td>
        <td><%= link_to 'Edit', edit_settings_shop_path(shop) %></td>
        <td><%= link_to 'Destroy', settings_shop_path(shop), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shop', new_settings_shop_path %>
