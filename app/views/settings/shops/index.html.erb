<%= render "info" %>
<div id="about">
  <ul class="function">
    <li>
      <%= link_to "Add a New Shop", new_settings_shop_path, class: "BTNyellow addNew" %>
    </li>
  </ul>
  <p>Please enter shop informations here.<br>This information will be displayed to your customers.</p>
</div>

<form>
  <div id="shopList" class="formRow">
    <ul class="tableTTL">
      <li class="check">Delete</li>
      <li class="rowTTL">Shop Name</li>
      <li class="updateTime">update time</li>
    </ul>
    <% @shops.each do |shop| %>
      <dl>
        <dt>
          <%= link_to 'DELETE', settings_shop_path(shop), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </dt>
        <dt class="rowTTL"><%= shop.name %></dt>
        <dd class="updateTime"><%= shop.updated_at.to_s(:date) %></dd>
        <dd class="function">
          <%= link_to "Edit", edit_settings_shop_path(shop), class: "BTNtarco" %>
        </dd>
      </dl>
    <% end %>
  </div>
</form>

