<div id="subNav">
  <h2>基本情報 − 予約枠</h2>
</div>
<div id="about">
  <ul class="function">
    <li>
      <%= link_to t("settings.reservation_setting.new_button"), new_settings_user_reservation_setting_path(super_user), class: "BTNyellow addNew" %>
    </li>
  </ul>
  <p><%= t("settings.reservation_setting.info_1") %><br /><%= t("settings.reservation_setting.info_2") %></p>
</div>

<div id="settingForm">
  <div id="resframeList" class="formRow">
    <ul class="tableTTL">
      <li class="rowTTL"><%= t("settings.reservation_setting.name") %></li>
      <li class="updateTime"><%= t("common.updated_time") %></li>
    </ul>

    <% @reservation_settings.each do |setting| %>
      <dl>
        <dt class="rowTTL"><%= link_to setting.name, edit_settings_user_reservation_setting_path(super_user, setting) %></dt>
        <dd class="updateTime"><%= setting.updated_at.to_s(:date) %></dd>
        <dd class="function">
          <%= link_to t("action.edit"), edit_settings_user_reservation_setting_path(super_user, setting), class: "BTNtarco" %>
          <%= link_to t("action.delete"), settings_user_reservation_setting_path(super_user, setting), method: :delete, class: "BTNorange", data: {confirm: t("common.are_you_sure_message") }%>
        </dd>
      </dl>
    <% end %>
  </div>
</div>
