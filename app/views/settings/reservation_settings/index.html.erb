<div id="subNav">
  <h2>基本情報 − 予約枠</h2>
</div>
<div id="about">
  <ul class="function">
    <li>
      <%= link_to t("settings.reservation_setting.new_button"), new_settings_reservation_setting_path, class: "BTNyellow addNew" %>
    </li>
  </ul>
  <p><%= t("settings.reservation_setting.info_1") %><br /><%= t("settings.reservation_setting.info_2") %></p>
</div>

<form>
  <div id="resframeList" class="formRow">
    <ul class="tableTTL">
      <li class="check"><%= t("action.delete") %></li>
      <li class="rowTTL"><%= t("settings.reservation_setting.name") %></li>
      <li class="updateTime"><%= t("common.updated_time") %></li>
    </ul>

    <% @reservation_settings.each do |setting| %>
      <dl>
        <dt class="check">
          <%= link_to t("action.delete"), settings_reservation_setting_path(setting), method: :delete, class: "btn btn-danger", data: {confirm: "Are are sure" }%>
        </dt>
        <dt class="rowTTL"><%= setting.name %></dt>
        <dd class="updateTime"><%= setting.updated_at.to_s(:date) %></dd>
        <dd class="function">
          <%= link_to t("action.edit"), edit_settings_reservation_setting_path(setting), class: "BTNtarco" %>
        </dd>
      </dl>
    <% end %>
  </div>
</form>
