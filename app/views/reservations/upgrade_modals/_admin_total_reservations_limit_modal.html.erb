<% if cannot?(:create, Reservation) %>
  <%
      current_plan_level = current_user.current_plan.level
  %>
  <div class="modal fade" id="adminUpgradeTotalReservationsLimitModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
k       <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">
            <%= t("reservation.modal.admin.total_reservations_limit.upgrade_title") %>
          </h4>
        </div>
        <div class="modal-body">
          <%= t("reservation.modal.admin.total_reservations_limit.#{current_plan_level}_upgrade_content_html",
                free_plan_reservations_total_limit: number_with_delimiter(Ability::TOTAL_RESERVATIONS_LIMITS[Plan::FREE_LEVEL]),
                basic_plan_price: plan_price(Plan::BASIC_LEVEL),
                basic_plan_reservations_total_limit: number_with_delimiter(Ability::TOTAL_RESERVATIONS_LIMITS[Plan::BASIC_LEVEL]),
                premium_plan_price: plan_price(Plan::PREMIUM_LEVEL),
               ) %>
        </div>
        <div class="modal-footer centerize">
          <% if current_plan_level == Plan::FREE_LEVEL %>
            <%= link_to t("action.upgrade_to_basic"), settings_plans_path(upgrade: Plan::BASIC_LEVEL), class: "btn BTNtarco" %>
          <% end %>

          <%= link_to t("action.upgrade_to_premium"), settings_plans_path(upgrade: Plan::PREMIUM_LEVEL), class: "btn BTNyellow" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
