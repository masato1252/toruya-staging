<% if cannot?(:create, Reservation) %>
  <%
      current_plan_level = current_user.current_plan.level
  %>
  <div class="modal fade" id="adminUpgradeDailyReservationsLimitModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">
            <%= t("reservation.modal.admin.daily_reservations_limit.upgrade_title") %>
          </h4>
        </div>
        <div class="modal-body">
          <%= t("reservation.modal.admin.daily_reservations_limit.upgrade_content", reservations_daily_limit: Ability::RESERVATION_DAILY_LIMIT, premium_plan_price: plan_price(Plan::PREMIUM_LEVEL)).html_safe %>
        </div>
        <div class="modal-footer centerize">
          <%= link_to t("action.upgrade_to_premium"), settings_plans_path, class: "btn BTNyellow" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
