<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Shop</th>
      <th>Menu</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.shop_id %></td>
        <td><%= reservation.menu_id %></td>
        <td><%= reservation.start_time.to_s(:full_datetime_without_timezone) %></td>
        <td><%= reservation.end_time.to_s(:full_datetime_without_timezone) %></td>
        <td><%= link_to 'Edit', edit_shop_reservation_path(shop, reservation) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_shop_reservation_path(shop) %>
