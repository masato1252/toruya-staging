<%
  changed_attributes = reservation_customer.customer_info.attributes.compact
%>
<% if changed_attributes.present? %>
  <% changed_attributes.delete("address_details") %>

  <div class="reservation-info-row">
    <i class="fa fa-database"></i><span><%= I18n.t("customer.customer_info_changed_messsage") %>:</span>
    <p>
      <% changed_attributes.each do |changed_attr, value| %>
        <%= Customer.human_attribute_name(changed_attr) %>: <%= value %><br />
      <% end %>

      <% reservation_customer.customer_info.sorted_address_details.each do |changed_attr, value| %>
        <%= I18n.t("customer.#{changed_attr}") %>: <%= value %><br />
      <% end %>
    </p>
  </div>
<% end %>
