<div class="reservation-info-row">
  <i class="fas fa-money-bill-wave"></i><span><%= t("common.booking_price") %>: 
    <% if reservation_customer.booking_amount_cents %>
      <%= reservation_customer.price_text %>
      <% if reservation_customer.payment_refunded? %>
        <div class="payment-states refunded"><%= t("common.refunded") %></div>
      <% end %>

      <% if reservation_customer.payment_paid? %>
        <div class="payment-states paid"><%= t("common.paid") %></div>
      <% end %>
    <% else %>
      No-data
    <% end %>
  </span>
</div>
