<%= form_for(@social_account, url: admin_social_account_path(user_id: @social_account.user_id), html: { method: :put }) do |f| %>
  <h4>Message API</h4>
  <div class="field">
    <%= f.label :label %> <%= f.text_field :label %>
  </div>

  <div class="field">
    <%= f.label :basic_id %> <%= f.text_field :basic_id %>
  </div>

  <div class="field">
    <%= f.label :channel_id %> <%= f.text_field :channel_id %>
  </div>

  <div class="field">
    <%= f.label :channel_token %> <%= f.text_field :channel_token, value: @social_account.raw_channel_token %>
  </div>

  <div class="field">
    <%= f.label :channel_secret %> <%= f.text_field :channel_secret, value: @social_account.raw_channel_secret %>
  </div>
  <h4>Line login API</h4>

  <div class="field">
    <%= f.label :login_channel_id %> <%= f.text_field :login_channel_id %>
  </div>

  <div class="field">
    <%= f.label :login_channel_secret %> <%= f.text_field :login_channel_secret, value: @social_account.raw_login_channel_secret %>
  </div>

  <div class="actions">
    <%= f.submit t("action.save") %>
  </div>
<% end %>

<br /><hr><br />
<%= button_to "#{t("admin.chat.clean_line_settings")} (#{@social_account.user_id})", admin_social_account_path(user_id: @social_account.user_id) , method: :delete, data: { confirm: "#{@social_account.user_id} #{t("admin.chat.reset_line_settings")}" }, class: "btn btn-danger" %>

<br />
<%= button_to t("admin.chat.line_finished_message"), line_finished_message_admin_social_account_path(user_id: @social_account.user_id), class: "btn btn-gray" %>
<br /><hr><br />
<%= link_to "Line friend", @social_account.add_friend_url if @social_account.add_friend_url %>
