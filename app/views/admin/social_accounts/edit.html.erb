<%= form_for(@social_account, url: admin_social_account_path(social_service_user_id: @social_user.social_service_user_id), html: { method: :put }) do |f| %>
  <h4>Message API</h4>
  <div class="field">
    <%= f.label :label %> <%= f.text_field :label %>
  </div>

  <div class="field">
    <%= f.label :basic_id %> <%= f.text_field :basic_id %>
  </div>

  <div class="field">
    <%= f.label :channel_id %> <%= f.text_field :channel_id %>
  </div>

  <div class="field">
    <%= f.label :channel_token %> <%= f.text_field :channel_token, value: @social_account.raw_channel_token %>
  </div>

  <div class="field">
    <%= f.label :channel_secret %> <%= f.text_field :channel_secret, value: @social_account.raw_channel_secret %>
  </div>
  <h4>Line login API</h4>

  <div class="field">
    <%= f.label :login_channel_id %> <%= f.text_field :login_channel_id %>
  </div>

  <div class="field">
    <%= f.label :login_channel_secret %> <%= f.text_field :login_channel_secret, value: @social_account.raw_login_channel_secret %>
  </div>

  <div class="actions">
    <%= f.submit t("action.save") %>
  </div>
<% end %>

<hr>
<%= button_to t("admin.chat.clean_line_settings"), admin_social_account_path(social_service_user_id: @social_user.social_service_user_id) , method: :delete, data: { confirm: "Are you sure to clean Line settings?" }, class: "btn btn-danger" %>
