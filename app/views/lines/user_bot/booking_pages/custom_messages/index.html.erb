<div class="booking-page-show form with-top-bar">
  <%= render "lines/user_bot/top_navigation_bar", previous_path: lines_user_bot_booking_page_path(@booking_page), title: t("user_bot.dashboards.settings.custom_message.auto_message_label") %>

  <div class="field-group-header" id="name"><%= t("user_bot.dashboards.settings.custom_message.booking_page.online_booking") %></div>
  <div class="field-header"><%= I18n.t("user_bot.dashboards.settings.custom_message.booking_page.page_label") %></div>
  <%= render "lines/user_bot/field_row", title: @booking_page.name %>

  <div class="field-header"><%= I18n.t("user_bot.dashboards.settings.custom_message.send_message_label") %></div>

  <% if @sequence_messages.exists? %>
    <% @sequence_messages.each.with_index do |message, index| %>
      <%= render "lines/user_bot/field_row",
        path: edit_scenario_lines_user_bot_booking_page_custom_messages_path(
          @booking_page,
          scenario: CustomMessage::BOOKING_PAGE_BOOKED,
          send_right_after_approved: true),
        title: t("user_bot.dashboards.settings.custom_message.booking_page.booking_page_booked") if index == 0 && !message.after_days.nil? %>
      <%= render "lines/user_bot/field_row",
        path: edit_scenario_lines_user_bot_booking_page_custom_messages_path(
          @booking_page,
          scenario: CustomMessage::BOOKING_PAGE_BOOKED,
          id: message.id,
          send_right_after_approved: !message.after_days),
        title: message.after_days ? "after service start #{message.after_days} days" : t("user_bot.dashboards.settings.custom_message.booking_page.booking_page_booked") %>
    <% end %>
  <% else %>
    <%= render "lines/user_bot/field_row",
      path: edit_scenario_lines_user_bot_booking_page_custom_messages_path(
        @booking_page,
        scenario: CustomMessage::BOOKING_PAGE_BOOKED,
        send_right_after_approved: true),
      title: t("user_bot.dashboards.settings.custom_message.booking_page.booking_page_booked") %>
  <% end %>
</div>
