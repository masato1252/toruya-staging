<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 px-0 settings-view">
      <div class="service-show form with-top-bar">
        <%= render "lines/user_bot/top_navigation_bar", previous_path: lines_user_bot_service_path(@online_service), title: I18n.t("user_bot.dashboards.settings.membership.episodes.title") %>
        <div class="field-group-header" id="content"><%= I18n.t("user_bot.dashboards.settings.membership.episodes.subtitle") %></div>
        <%= form_with path: lines_user_bot_service_episodes_path(@online_service), method: :get, skip_enforcing_utf8: true do %>
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-search search-symbol" aria-hidden="true"></i>
            </span>
            <input type="search" class="form-control" placeholder=<%= t("user_bot.dashboards.settings.episodes.form.search_by_name") %> name="keyword" id="search" />
          </div>
        <% end %>

        <% @episodes.each do |episode| %>
          <%= render "lines/user_bot/field_state", state: episode.state do %>
            <%= render "lines/user_bot/field_row", path: lines_user_bot_service_episode_path(@online_service, episode) do %>
              <div>
                <%= image_tag(episode.thumbnail_url, class: "preview-image") if episode.thumbnail_url %>
                <span class="dotdotdot"><%= episode.name %></span>
              </div>
            <% end %>
          <% end %>
        <% end %>

        <%= render "lines/user_bot/bottom_navigation_bar", klass: "transparent" do %>
          <%= link_to new_lines_user_bot_service_episode_path(@online_service), class: "btn btn-yellow btn-circle btn-save btn-tweak btn-with-word" do %>
            <i class="fas fa-plus fa-2x"></i>
            <div class="word"><%= I18n.t("action.add_more") %></div>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-sm-6 px-0 hidden-xs preview-view"></div>
  </div>
</div>
