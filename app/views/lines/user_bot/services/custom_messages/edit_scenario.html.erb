<%= react_component("user_bot/services/custom_messages/edit", {
  props: {
    scenario: params[:scenario],
    message: {
      id: @message&.id,
      service_id: @online_service.id,
      service_type: @online_service.class.name,
      template: @template,
      after_days: @message&.after_days || 3,
      right_away: params[:right_away]
    }.merge!(@online_service.message_template_variables(current_user))
  }
},
{ camelize_props: false }
) %>
