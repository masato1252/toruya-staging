<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 px-0 settings-view">
      <div class="booking-page-show form with-top-bar">
        <%= render "lines/user_bot/top_navigation_bar", previous_path: lines_user_bot_service_chapter_lesson_path(@online_service, @chapter, @lesson), title: t("user_bot.dashboards.settings.custom_message.auto_message_label") %>

        <div class="field-group-header" id="name"><%= t("user_bot.dashboards.settings.custom_message.online_service.section_title") %></div>
        <div class="field-header"><%= t("user_bot.dashboards.settings.custom_message.online_service.service_page_title") %></div>
        <%= render "lines/user_bot/field_row", title: @lesson.name %>

        <div class="field-header"><%= I18n.t("user_bot.dashboards.settings.custom_message.send_message_label") %></div>
        <%= render "lines/user_bot/field_row",
          title: t("user_bot.dashboards.settings.custom_message.lesson.lesson_watched", lesson_name: @lesson.name),
          path: edit_scenario_lines_user_bot_service_chapter_lesson_custom_messages_path(
            @online_service,
            @chapter,
            @lesson,
            scenario: ::CustomMessages::Customers::Template::LESSON_WATCHED,
            id: @watched_message&.id
          )
        %>
      </div>
    </div>

    <div class="col-sm-6 px-0 hidden-xs preview-view"></div>
  </div>
</div>
