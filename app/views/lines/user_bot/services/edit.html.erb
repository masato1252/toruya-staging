<%= react_component("user_bot/services/edit", {
  props: {
    business_owner_id: business_owner_id,
    back_path: lines_user_bot_service_path({ business_owner_id: business_owner_id, id: @service.id }),
    service: OnlineServiceSerializer.new(@service).attributes_hash,
    attribute: @attribute,
    companies: [CompanyInfoSerializer.new(Current.business_owner.profile).attributes_hash]
    ,
    upsell_sales: Current.business_owner.sale_pages.end_yet.includes(:product, :sale_template).map do |sale_page|
      next unless sale_page.product
      hash = SalePageOptionSerializer.new(sale_page).attributes_hash

      {
        label: hash[:label],
        value: hash
      }
    end.compact,
    solutions: @service.solution_options,
    message_template: @service.message_template ? CustomMessageSerializer.new(@service.message_template).attributes_hash : nil,
    bundled_service_candidates: Current.business_owner.online_services.bundleable.order("online_services.id").map do |online_service|
      hash = BundleableServiceSerializer.new(online_service).attributes_hash

      {
        label: hash[:label],
        value: hash
      }
    end,
    default_picture_url: @service.default_picture_url
  }
},
{ camelize_props: false }
) %>
