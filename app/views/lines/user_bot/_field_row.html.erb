<% if local_assigns[:path] %>
  <%= link_to local_assigns[:path], class: "field-row with-next-arrow with-format" do %>
    <% if local_assigns[:title] %>
      <span class="dotdotdot"><%= local_assigns[:title] %></span>
    <% else %>
      <%= yield %>
    <% end %>
    <i class="fa fa-angle-right"></i>
  <% end %>
<% else  %>
  <div class="field-row with-format">
    <% if local_assigns[:title] %>
      <span class="dotdotdot"><%= local_assigns[:title] %></span>
    <% else %>
      <%= yield %>
    <% end %>
  </div>
<% end %>
