<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 px-0 settings-view">
      <div class="service-show form with-top-bar">
        <%= render "lines/user_bot/top_navigation_bar",
          previous_path: lines_user_bot_survey_responses_path(business_owner_id, @survey),
          title: t("user_bot.dashboards.surveys.responses.title") %>

        <div class="field-group-header" id="name"><%= t("common.customer_name") %></div>
        <%= render "lines/user_bot/field_row", title: @survey_response.customer.try(:name), path: lines_user_bot_customers_path(business_owner_id: business_owner_id, customer_id: @survey_response.customer.id, target_view: Customer::DASHBOARD_TARGET_VIEWS[:reservations], from: FROM[:survey_response_show]) %>

        <div class="survey-response">
          <%= render partial: 'surveys/non_activity_answers', locals: { non_activity_answers: @survey_response.non_activity_answers } %>
        </div>
      </div>
    </div>

    <div class="col-sm-6 px-0 hidden-xs preview-view"></div>
  </div>
</div>