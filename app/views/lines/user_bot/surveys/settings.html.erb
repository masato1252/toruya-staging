<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 px-0 settings-view">
      <div class="booking-pages form with-top-bar">
        <%= render "lines/user_bot/top_navigation_bar",
          previous_path: lines_user_bot_survey_path(business_owner_id, @survey),
          title: t("user_bot.dashboards.surveys.settings.title") %>

        <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_survey_path(@survey, business_owner_id: business_owner_id, attribute: :active) do %>
          <span><span><%= I18n.t("settings.booking_page.form.privacy_status") %>:</span> <span class="text-gray-500"><%= @survey.active ? I18n.t("common.public") : I18n.t("common.private") %></span></span>
        <% end %>

        <div class="field-group-header" id="customer_cancel_request"><%= I18n.t("settings.booking_page.form.customer_related_settings") %></div>
        <%= render "lines/user_bot/field_row", path: lines_user_bot_survey_custom_messages_path(@survey, business_owner_id: business_owner_id) do %>
          <span><%= t("user_bot.dashboards.settings.custom_message.auto_message_booking_label") %></span>
        <% end %>
      </div>
    </div>
    <div class="col-sm-6 px-0 hidden-xs preview-view"></div>
  </div>
</div>