<%= jump_out_modal(lines_user_bot_tours_line_settings_required_for_online_service_path, static: true) unless Current.business_owner.social_account&.line_settings_finished? %>
<%= jump_out_modal(line_settings_verified_lines_user_bot_warnings_path, static: true) if !Current.business_owner.social_account.line_settings_verified? %>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 px-0 settings-view">
      <div class="settings-dashboard form with-top-bar">
        <%= render "lines/user_bot/top_navigation_bar", previous_path: lines_user_bot_settings_path, title: t("user_bot.dashboards.settings.rich_menu.title") %>
        <div class="field-header"><%= t("user_bot.dashboards.settings.dashboard.line_rich_menu") %></div>
        <%= render "lines/user_bot/field_row",
          title: @social_account.using_line_official_account? ? t("user_bot.dashboards.settings.rich_menu.manual") : t("user_bot.dashboards.settings.rich_menu.auto") %>

        <div class="action-block">
          <% if @social_account.using_line_official_account? %>
            <p>
            <%= t("user_bot.dashboards.settings.rich_menu.auto_description_html") %>
            </p>
          <% else %>
            <p>
            <%= t("user_bot.dashboards.settings.rich_menu.manual_description_html") %>
            </p>
          <% end %>
        </div>
        <div class="action-block">
          <% if @social_account.using_line_official_account? %>
            <%= button_to t("user_bot.dashboards.settings.rich_menu.auto_switch_btn"),
              lines_user_bot_settings_social_account_rich_menu_path, method: :post, class: "btn btn-orange", data: { disable_with: t("common.processing") } %>
          <% else %>
            <%= button_to t("user_bot.dashboards.settings.rich_menu.manual_switch_btn"), lines_user_bot_settings_social_account_rich_menu_path, method: :delete, class: "btn btn-orange", data: { disable_with: t("common.processing") } %>
          <% end %>
        </div>
        <div class="action-block">
          <i class="fa fa-lightbulb"></i><%= link_to t("user_bot.dashboards.settings.rich_menu.help_link"), "https://toruya.com/help/richmenu_setting/" %>
        </div>
      </div>
    </div>

    <div class="col-sm-6 px-0 hidden-xs preview-view"></div>
  </div>
</div>
