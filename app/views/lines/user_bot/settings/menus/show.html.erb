<div class="settings-dashboard form with-top-bar">
  <%= render "lines/user_bot/top_navigation_bar", previous_path: lines_user_bot_settings_menus_path, title: t("user_bot.dashboards.settings.shop.shop_info_label") %>
  <div class="field-group-header" id="name"><%= I18n.t("user_bot.dashboards.settings.menu.basic_settings") %></div>
  <div class="field-header"><%= t("user_bot.dashboards.settings.menu.name") %></div>
  <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_menu_path(id: @menu.id, attribute: :name) do %>
    <div>
      <%= @menu.name %><br />
      <%= @menu.short_name %>
    </div>
  <% end %>
  <div class="field-header"><%= t("user_bot.dashboards.settings.menu.minutes") %></div>
  <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_menu_path(id: @menu.id, attribute: :minutes) do %>
    <div>
      <%= @menu.minutes %>
    </div>
  <% end %>
  <div class="field-header"><%= t("user_bot.dashboards.settings.menu.interval") %></div>
  <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_menu_path(id: @menu.id, attribute: :interval) do %>
    <div>
      <%= @menu.interval %>
    </div>
  <% end %>
  <div class="field-header"><%= "利用店舗 席数" %></div>
  <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_menu_path(id: @menu.id, attribute: :menu_shops) do %>
    <div>
      <% @menu_shops.each do |menu_shop| %>
        <div class="dotdotdot">
          <%= menu_shop.shop.display_name %> <span class="desc">席数<%= menu_shop.max_seat_number %></span>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
