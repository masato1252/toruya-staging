<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 px-0 settings-view">
      <div class="settings-dashboard form with-top-bar">
        <%= render "lines/user_bot/top_navigation_bar", previous_path: lines_user_bot_settings_path(root_user.id), title: t("user_bot.dashboards.settings.social_account.new") %>

        <div class="margin-around centerize"><%= t("user_bot.dashboards.settings.social_account.description_html") %></div>
        <div class="margin-around warning centerize"><%= t("user_bot.dashboards.settings.social_account.warning_html") %></div>

        <div class="margin-around centerize">
          <%= button_to toruya_new_line_account_url(lines_user_bot_settings_path), class: "btn btn-yellow mx-1" do %>
            <%= t("user_bot.dashboards.settings.social_account.new_btn") %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-sm-6 px-0 hidden-xs preview-view"></div>
  </div>
</div>
