<%= jump_out_modal(callback_modal_lines_user_bot_settings_social_account_path) if @social_account.is_login_available? %>

<div class="settings-dashboard form with-top-bar">
  <%= render "lines/user_bot/top_navigation_bar", previous_path: lines_user_bot_settings_path, title: t("user_bot.dashboards.settings.dashboard.line_login_api_label") %>
  <div class="centerize action-block">
    <%= link_to "https://developers.line.biz/ja/?openExternalBrowser=1", class: "btn btn-tarco", target: "_blank" do %>
      <i class="fa fa-share-square"></i>
      <span><%= I18n.t("user_bot.dashboards.settings.social_account.line_developer") %></span>
    <% end %>
  </div>

  <div class="field-group-header"><%= t("user_bot.dashboards.settings.dashboard.line_login_api_label") %></div>
  <div class="field-header"><%= t("settings.social_account.form.login_channel_id_title") %></div>
  <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_social_account_path(attribute: :login_channel_id), title: @social_account.login_channel_id %>

  <div class="field-header"><%= t("settings.social_account.form.login_channel_secret_title") %></div>
  <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_social_account_path(attribute: :login_channel_secret), title: @social_account.raw_login_channel_secret %>

  <%= render "lines/user_bot/bottom_navigation_bar", klass: "transparent" do %>
    <span></span>
    <% if @social_account.is_login_available? %>
      <%= modal_link_to callback_modal_lines_user_bot_settings_social_account_path, class: "btn btn-tarco btn-circle btn-save btn-tweak btn-with-word" do %>
        <i class="fa fa-window-restore fa-2x"></i>
        <div class="word">Callback</div>
      <% end %>
    <% end %>
  <% end %>
</div>
