<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 px-0 settings-view">
      <div class="settings-dashboard form with-top-bar">
        <%= render "lines/user_bot/top_navigation_bar", previous_path: lines_user_bot_settings_path(business_owner_id), title: t("user_bot.dashboards.settings.shop.shop_info_label") %>
        <div class="field-header"><%= t("user_bot.dashboards.settings.shop.name_label") %></div>
        <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_shop_path(id: @shop.id, business_owner_id: business_owner_id, attribute: :name) do %>
          <div>
            <%= @shop.name %><br />
            <%= @shop.short_name %>
          </div>
        <% end %>

        <div class="field-header"><%= t("user_bot.dashboards.settings.shop.address_label") %></div>
        <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_shop_path(id: @shop.id, business_owner_id: business_owner_id, attribute: :address), title: @shop.company_full_address %>

        <div class="field-header"><%= t("user_bot.dashboards.settings.shop.phone_number_label") %></div>
        <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_shop_path(id: @shop.id, business_owner_id: business_owner_id, attribute: :phone_number), title: @shop.phone_number %>

        <div class="field-header"><%= t("user_bot.dashboards.settings.shop.email_label") %></div>
        <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_shop_path(id: @shop.id, business_owner_id: business_owner_id, attribute: :email), title: @shop.email %>

        <div class="field-header"><%= t("user_bot.dashboards.settings.shop.website_label") %></div>
        <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_shop_path(id: @shop.id, business_owner_id: business_owner_id, attribute: :website), title: @shop.website %>

        <div class="field-header"><%= t("user_bot.dashboards.settings.shop.logo_label") %></div>
        <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_shop_path(id: @shop.id, business_owner_id: business_owner_id, attribute: :logo) do %>
          <div>
            <%= shop_logo(@shop, "390x135", image_class: "logo") %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-sm-6 px-0 hidden-xs preview-view">
      <div class="fake-mobile-layout">
        <%= react_component(
          "user_bot/sales/demo",
          { shop: CompanyInfoSerializer.new(@shop).attributes_hash.merge!(logo_url: shop_logo_url(@shop, "260", true)) },
          { camelize_props: false }
        ) %>
      </div>
    </div>
  </div>
</div>
