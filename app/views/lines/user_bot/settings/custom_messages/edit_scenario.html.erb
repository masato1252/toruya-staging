<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 px-0">
      <%= react_component("user_bot/booking_pages/custom_messages/edit", {
        props: {
          scenario: params[:scenario],
          previous_path: lines_user_bot_settings_shop_custom_messages_path(shop_id: @shop.id),
          message: {
            id: @message&.id,
            service_id: @shop.id,
            service_type: @shop.class.name,
            template: @template,
          }.merge!(@shop.message_template_variables(current_user))
        }
      },
      { camelize_props: false }
                         ) %>
    </div>

    <div class="col-sm-6 px-0"></div>
  </div>
</div>
