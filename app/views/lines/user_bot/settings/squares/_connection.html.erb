<div class="margin-around centerize">
  <%= t("user_bot.dashboards.settings.square.square_desc1_html") %>
</div>
<div class="centerize">
  <%= button_to user_square_omniauth_authorize_path(oauth_redirect_to_url: lines_user_bot_settings_path(business_owner_id: business_owner_id)),
    class: "btn-square-connect btn btn-yellow",
    disabled: !is_owner do %>
    <%= Current.business_owner.square_provider ? t("action.square_connected") : t("action.square_connect") %>
  <% end %>
  <% if !is_owner %>
    <div class="warning"><%= t("user_bot.dashboards.settings.square.owner_warning") %></div>
  <% end %>
</div>

<div class="margin-around centerize">
  <%= t("user_bot.dashboards.settings.square.square_desc2_html") %>
</div>
<div class="margin-around centerize">
  <%= link_to t("action.square_sign_up"), "https://squareup.com/jp", class: "btn btn-tarco", target: "_blank" %>
</div>
<% if Current.business_owner.square_provider %>
  <hr />
  <div class="margin-around centerize">
    <%= button_to t("user_bot.dashboards.settings.square.default_payment_button"), lines_user_bot_settings_square_path(business_owner_id: business_owner_id), class: "btn btn-tarco", disabled: Current.business_owner.square_provider&.default_payment?, method: :patch %>
  </div>
<% end %>
