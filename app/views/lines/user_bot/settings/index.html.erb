<div class="settings-dashboard form">
  <h3><%= I18n.t("user_bot.dashboards.settings.dashboard.title") %></h3>

  <div class="dashboard">
    <div class="cell">
      <div>
        <%= t("settings.dashboard.today_had_created") %>
      </div>
      <div>
        <strong><span class="big"><%= @today_reservations_count %></span><span> / <%= current_user.premium_member? ? t("settings.dashboard.no_limit") : Reservations::DailyLimit::RESERVATION_DAILY_LIMIT %></span></strong>
      </div>
      <div class="desc">
        <%= t("settings.dashboard.do_reservations_created") %>
      </div>
    </div>
    <div class="cell">
      <div>
        <%= t("settings.dashboard.total_had_created") %>
      </div>
      <div>
        <strong><span class="big"><%= @total_reservations_count %></span><span> / <%= @total_reservations_limit || t("settings.dashboard.no_limit") %></span></strong>
      </div>
      <div class="desc">
        <%= t("settings.dashboard.reservations_created") %>
      </div>
    </div>
  </div>

  <div class="field-header"><%= I18n.t("user_bot.dashboards.settings.dashboard.info_label") %></div>

  <%= link_to lines_user_bot_settings_profile_path, class: "field-row" do %>
    <span><%= t("settings.profile.user_info") %></span><i class="fa fa-angle-right"></i>
  <% end %>
  <%= link_to company_lines_user_bot_settings_profile_path, class: "field-row" do %>
    <span><%= t("settings.profile.company_info") %></span><i class="fa fa-angle-right"></i>
  <% end %>

  <div class="field-header"><%= t("settings.plans.plan_info.caption") %></div>

  <%= link_to lines_user_bot_settings_plans_path, class: "field-row" do %>
    <div>
      <%= t("settings.plans.plan_info.plan_member", plan_name: current_user.member_plan_name) %><br />
      <div class="desc">
        <%= t("settings.plans.plan_info.status") %>: <%= subscription_status(@subscription) %><br />
        <% if current_user.trial_member? %>
          <%= l(current_user.created_at.advance(months: 3).to_date) %>
        <% else %>
          <%= @subscription.expired_date && l(@subscription.expired_date) if @subscription.active? && @subscription.charge_required %>
          <%= " (#{@subscription.next_plan.name}変更予定)" if @subscription.active? && @subscription.next_plan %>
        <% end %>
      </div>
    </div>
    <i class="fa fa-angle-right"></i>
  <% end %>

  <%= link_to lines_user_bot_settings_payments_path, class: "field-row" do %>
    <span><%= t("user_bot.dashboards.settings.dashboard.payments_label") %></span><i class="fa fa-angle-right"></i>
  <% end %>

  <div class="field-header"><%= t("user_bot.dashboards.settings.dashboard.line_label") %></div>
  <%= link_to message_api_lines_user_bot_settings_social_account_path, class: "field-row" do %>
    <span><%= t("user_bot.dashboards.settings.dashboard.line_message_api_label") %></span><i class="fa fa-angle-right"></i>
  <% end %>
  <%= link_to login_api_lines_user_bot_settings_social_account_path, class: "field-row" do %>
    <span><%= t("user_bot.dashboards.settings.dashboard.line_login_api_label") %></span><i class="fa fa-angle-right"></i>
  <% end %>

  <% if @social_account %>
    <%= link_to edit_lines_user_bot_settings_social_account_rich_menu_path, class: "field-row" do %>
      <span><%= t("user_bot.dashboards.settings.dashboard.line_rich_menu") %></span>
      <span>
        <span>
          <%= @social_account.using_line_official_account? ? t("user_bot.dashboards.settings.rich_menu.manual") : t("user_bot.dashboards.settings.rich_menu.auto") %>
        </span>
        <i class="fa fa-angle-right"></i>
      </span>
    <% end %>
  <% end %>

  <div class="bottom-navigation-bar centerize">
    <%= current_user.id %>
  </div>
</div>
