<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 px-0 settings-view">
      <div class="form with-top-bar">
        <%= render "lines/user_bot/top_navigation_bar", previous_path: lines_user_bot_settings_path(business_owner_id: business_owner_id), title: t("user_bot.dashboards.settings.equipments.list_page_title") %>

        <div class="field-header d-flex justify-content-between align-items-center">
          <span><%= t("user_bot.dashboards.settings.equipments.list_page_header") %></span>
        </div>
        <% if @equipments.any? %>
          <% @equipments.each do |equipment| %>
            <%= render "lines/user_bot/field_row", path: lines_user_bot_settings_shop_equipment_path(shop_id: @shop.id, business_owner_id: business_owner_id, id: equipment.id) do %>
              <div class="dotdotdot">
                <h3><%= equipment.name %></h3>
                <div class="desc">
                  <%= t("user_bot.dashboards.settings.equipments.quantity") %>: <%= equipment.quantity %>
                </div>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <div class="margin-around centerize">
            <div class="desc"><%= t("user_bot.dashboards.settings.equipments.no_equipments") %></div>
          </div>
        <% end %>

        <% if is_not_phone? %>
          <div class="margin-around centerize">
            <%= link_to new_lines_user_bot_settings_shop_equipment_path(shop_id: @shop.id, business_owner_id: business_owner_id), class: "btn btn-yellow" do %>
              <i class="fa fa-plus"></i>
              <%= t("action.add_more") %>
            <% end %>
          </div>
        <% end %>

        <div class="field-row warning no-border margin-around justify-center">
          <%= t("user_bot.dashboards.settings.equipments.hint_2_html") %>
        </div>

        <%= render "lines/user_bot/bottom_navigation_bar", klass: "centerize" do %>
          <%= link_to new_lines_user_bot_settings_shop_equipment_path(shop_id: @shop.id, business_owner_id: business_owner_id), class: "btn btn-yellow btn-circle btn-save btn-tweak btn-with-word" do %>
            <i class="fas fa-plus fa-2x"></i>
            <div class="word"><%= I18n.t("action.add_more") %></div>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-sm-6 px-0 hidden-xs preview-view"></div>
  </div>
</div>