<div class="settings-dashboard form with-top-bar">
  <div class="top-navigation-bar">
    <%= link_to lines_user_bot_settings_path do %>
      <i class="fa fa-angle-left fa-2x"></i>
    <% end %>
    <span><%= t("settings.profile.user_info") %></span>
    <i></i>
  </div>

  <div class="field-header"><%= t("common.name") %></div>
  <%= link_to "#", class: "field-row" do %>
    <span><%= @profile.name %></span><i class="fa fa-angle-right"></i>
  <% end %>

  <div class="field-header"><%= Profile.human_attribute_name(:address) %></div>
  <%= link_to "#", class: "field-row" do %>
    <span><%= @profile.personal_full_address %></span><i class="fa fa-angle-right"></i>
  <% end %>

  <div class="field-header"><%= Profile.human_attribute_name(:phone_number) %></div>
  <%= link_to "#", class: "field-row" do %>
    <span><%= current_user.phone_number %></span><i class="fa fa-angle-right"></i>
  <% end %>

  <div class="field-header">Email</div>
  <%= link_to "#", class: "field-row" do %>
    <span><%= current_user.email %></span><i class="fa fa-angle-right"></i>
  <% end %>
</div>
