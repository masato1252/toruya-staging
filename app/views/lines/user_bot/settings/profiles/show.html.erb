<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 px-0 settings-view">
      <div class="settings-dashboard form with-top-bar">
        <%= render "lines/user_bot/top_navigation_bar", previous_path: lines_user_bot_settings_path(business_owner_id: business_owner_id), title: t("settings.profile.user_info") %>

        <div class="field-header"><%= t("common.name") %></div>
        <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_profile_path(attribute: :name, business_owner_id: business_owner_id), title: @profile.name %>

        <div class="field-header"><%= Profile.human_attribute_name(:phone_number) %></div>
        <%= render "lines/user_bot/field_row", title: Current.business_owner.phone_number %>
      </div>
    </div>

    <div class="col-sm-6 px-0 hidden-xs preview-view"></div>
  </div>
</div>
