<div class="settings-dashboard form with-top-bar">
  <%= render "lines/user_bot/top_navigation_bar", previous_path: lines_user_bot_settings_path, title: t("settings.profile.company_info") %>

  <div class="field-header"><%= Profile.human_attribute_name(:company_name) %></div>
  <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_profile_path(@profile, attribute: :company_name), title: @profile.company_name %>

  <div class="field-header"><%= Profile.human_attribute_name(:address) %></div>
  <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_profile_path(@profile, attribute: :company_address_details), title: @profile.company_full_address %>

  <div class="field-header"><%= Profile.human_attribute_name(:phone_number) %></div>
  <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_profile_path(@profile, attribute: :company_phone_number), title: @profile.company_phone_number %>

  <div class="field-header"><%= Profile.human_attribute_name(:website) %></div>
  <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_profile_path(@profile, attribute: :website), title: @profile.website %>
</div>
