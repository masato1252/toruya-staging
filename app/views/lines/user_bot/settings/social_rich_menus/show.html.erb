<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 px-0 settings-view">
      <div class="booking-options form with-top-bar">
        <%= render "lines/user_bot/top_navigation_bar", title: @rich_menu.internal_name, previous_path: edit_lines_user_bot_settings_social_account_social_rich_menu_path(business_owner_id: business_owner_id, id: @rich_menu.id) %>
        <div class="field-header"><%= I18n.t("user_bot.dashboards.metrics.title") %></div>

        <div class="margin-around date-range-selector mb-4">
          <%= form_tag lines_user_bot_settings_social_account_social_rich_menu_path(business_owner_id: business_owner_id, id: @rich_menu.id), method: :get do %>
            <div class="d-flex align-items-center">
              <%= date_field_tag :start_date, @start_date, class: "form-control mr-3" %> ï½ž <%= date_field_tag :end_date, @end_date, class: "form-control mr-3" %>
              <%= submit_tag I18n.t("action.display"), class: "btn btn-tarco" %>
            </div>
          <% end %>
        </div>

        <div class="container table">
          <div class="row">
            <div class="col-xs-3" style="white-space: initial;"><%= I18n.t("user_bot.dashboards.metrics.content") %></div>
            <div class="col-xs-4"><%= I18n.t("user_bot.dashboards.metrics.click_count") %></div>
            <div class="col-xs-2"><%= I18n.t("user_bot.dashboards.metrics.conversion_count") %></div>
            <div class="col-xs-3"><%= I18n.t("user_bot.dashboards.metrics.revenue") %></div>
          </div>
          <% if @metrics.empty? %>
            <p class="margin-around centerize desc border border-solid border-gray-500 p-6">
              <%= I18n.t("user_bot.dashboards.metrics.no_data") %>
            </p>
          <% else %>
            <% @metrics.each do |label, metrics| %>
              <div class="row">
                <div class="col-xs-3 word-break-all" style="white-space: initial;">
                  <% if label.match?(/\A#{URI::regexp}\z/) %>
                    <%= link_to label, label, target: "_blank" %>
                  <% else %>
                    <%= label %>
                  <% end %>
                </div>
                <div class="col-xs-4"><%= metrics[:clicks] %></div>
                <div class="col-xs-2"><%= metrics[:conversions] %></div>
                <div class="col-xs-3"><%= metrics[:revenue_cents] %></div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-sm-6 px-0 hidden-xs preview-view"></div>
  </div>
</div>
