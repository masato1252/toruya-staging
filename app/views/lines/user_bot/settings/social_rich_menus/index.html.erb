<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 px-0 settings-view">
      <div class="service-show form with-top-bar">
        <%= render "lines/user_bot/top_navigation_bar", previous_path: "#", title: t("user_bot.dashboards.settings.service_customer_relation.service_register") %>

        <% @rich_menus.each do |rich_menu| %>
          <%= render "lines/user_bot/field_state", state: rich_menu.state do %>
            <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_social_account_social_rich_menu_path(rich_menu) do %>
              <span class="dotdotdot">
                <%= rich_menu.internal_name %>
              </span>
              <div class="desc"><%= "Description" %></div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-sm-6 px-0 hidden-xs preview-view"></div>
  </div>
</div>
