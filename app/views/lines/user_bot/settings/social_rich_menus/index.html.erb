<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 px-0 settings-view">
      <div class="service-show form with-top-bar">
        <%= render "lines/user_bot/top_navigation_bar", previous_path: edit_lines_user_bot_settings_social_account_rich_menu_path(business_owner_id: business_owner_id), title: t("settings.social_rich_menus.index_title") %>
        <div class="field-header"><%= t("settings.social_rich_menus.current") %></div>
        <% if @current_rich_menu %>
          <%= render "lines/user_bot/field_state", state: @current_rich_menu.state do %>
            <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_social_account_social_rich_menu_path(@current_rich_menu, business_owner_id: business_owner_id) do %>
              <%= render "cell", rich_menu: @current_rich_menu %>
            <% end %>
          <% end %>
        <% end %>

        <div class="field-header"><%= t("settings.social_rich_menus.pending") %></div>
        <% @pending_rich_menus.each do |rich_menu| %>
          <%= render "lines/user_bot/field_state", state: rich_menu.state do %>
            <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_social_account_social_rich_menu_path(rich_menu, business_owner_id: business_owner_id) do %>
              <%= render "cell", rich_menu: rich_menu %>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <%= render "lines/user_bot/bottom_navigation_bar", klass: "transparent" do %>
        <%= link_to new_lines_user_bot_settings_social_account_social_rich_menu_path(business_owner_id: business_owner_id), class: "btn btn-yellow btn-circle btn-save btn-tweak btn-with-word" do %>
          <i class="fas fa-plus fa-2x"></i>
          <div class="word"><%= I18n.t("action.add_more") %></div>
        <% end %>
      <% end %>
    </div>

    <div class="col-sm-6 px-0 hidden-xs preview-view"></div>
  </div>
</div>
