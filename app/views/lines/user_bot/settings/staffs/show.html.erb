<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 px-0 settings-view">
      <div class="settings-dashboard form with-top-bar">
        <%= render "lines/user_bot/top_navigation_bar", previous_path: lines_user_bot_settings_staffs_path(business_owner_id: business_owner_id), title: t("user_bot.dashboards.settings.staffs.list_page_header") %>

        <div class="field-header"><%= t("common.name") %></div>
        <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_staff_path(business_owner_id: business_owner_id, id: staff.id, attribute: :name), title: @staff.name.presence || t("common.no_data") %>

        <div class="field-header"><%= t("common.cellphone_number") %></div>
        <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_staff_path(business_owner_id: business_owner_id, id: staff.id, attribute: :phone_number), title: @staff.phone_number %>

        <div class="field-header"><%= t("common.email") %></div>
        <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_staff_path(business_owner_id: business_owner_id, id: staff.id, attribute: :email), title: @staff.email %>

        <div class="field-header"><%= t("user_bot.dashboards.settings.staffs.authority") %></div>
        <%= render "lines/user_bot/field_row", title: t("user_bot.dashboards.settings.staffs.authorities.#{@staff.level}") %>

        <div class="field-header"><%= t("user_bot.dashboards.settings.staffs.introduction") %></div>
        <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_staff_path(business_owner_id: business_owner_id, id: staff.id, attribute: :staff_info), title: @staff.introduction.presence || t("common.no_data") %>

        <div class="field-header"><%= t("user_bot.dashboards.settings.staffs.staff_menus") %></div>
        <%= render "lines/user_bot/field_row", path: edit_lines_user_bot_settings_staff_path(business_owner_id: business_owner_id, id: staff.id, attribute: :staff_menus), title: @staff.staff_menus.map(&:menu).map(&:name).join(", ") %>
      </div>
      <div class="centerize">
        <%= link_to t("action.invitation_resend"), resend_activation_lines_user_bot_settings_staffs_path(business_owner_id: business_owner_id, id: staff.id), class: "btn btn-tarco" %>

        <% if can?(:delete, @staff) %>
          <%= link_to t("user_bot.dashboards.settings.staffs.delete"), lines_user_bot_settings_staff_path(business_owner_id: business_owner_id, id: staff.id), class: "btn btn-orange", method: :delete, data: { confirm: I18n.t("settings.staff.delete_confirmation_message", staff_name: staff.name) } %>
        <% end %>
      </div>
    </div>

    <div class="col-sm-6 px-0 hidden-xs preview-view"></div>
  </div>
</div>
