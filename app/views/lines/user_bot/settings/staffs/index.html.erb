<div class="container table margin-around border border-solid border-gray-500">
  <div class="row">
    <div class="col-sm-3"><%= t("settings.staff.name") %></div>
    <div class="col-sm-3"><%= t("common.updated_time") %></div>
  </div>
  <% @staffs.each do |staff| %>
    <% next if staff.staff_account&.owner? && current_user_staff != staff %>

    <div class="row">
      <div class="col-sm-3">
        <% staff_name = staff.name.presence || staff.staff_account.phone_number || "スタッフ #{staff.id}" %>
        <%= link_to staff_name, "#" %>

        <% if !staff.active? %>
          <span class="label warning"><%= t("common.pending") %></span>
        <% end %>
      </div>
      <div class="col-sm-3">
        <%= staff.updated_at.to_s(:date) %>
      </div>
      <div class="col-sm-3">
        <% if can?(:delete, staff) %>
          <%= link_to t("action.delete"), lines_user_bot_settings_staff_path(staff), class: "BTNorange", method: :delete, data: { confirm: I18n.t("settings.staff.delete_confirmation_message", staff_name: staff.name) } %>
        <% end %>
    </div>
    </div>
  <% end %>
</div>
