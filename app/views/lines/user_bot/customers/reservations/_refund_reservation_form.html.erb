<%= form_with url: refund_lines_user_bot_customer_reservations_path(reservation_customer.customer.user_id, reservation_customer.reservation_id, reservation_customer.customer_id), local: true do |form| %>
  <%= text_field_tag :amount, reservation_customer.booking_amount.fractional %><%= t("common.unit") %>
  <%= form.submit t("reservation.modal.refund.submit_btn"), class: "btn btn-orange", data: { confirm: t("reservation.modal.refund.confirmation_message", provider: payment_provider_label(paid_payment.provider))  } %>
<% end %>
