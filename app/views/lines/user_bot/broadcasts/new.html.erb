<%= react_component("user_bot/broadcasts/creation_flow", {
  props: {
    menus: menu_group_options(@menus[:category_with_menu_options], :minutes, :interval, :min_staffs_number),
    line_settings_verified: current_user.social_account.line_settings_verified?,
    online_services: current_user.online_services.includes(:company, sale_page: [:product, :sale_template]).map { |service|
      {
        label: service.name,
        value: OnlineServiceSerializer.new(service).attributes_hash
      }
    },
    message: {
      customer_name: current_user.display_last_name,
    }
  }
},
{ camelize_props: false }
) %>
