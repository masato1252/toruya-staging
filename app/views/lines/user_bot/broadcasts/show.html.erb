<div class="form with-top-bar">
  <%= render "lines/user_bot/top_navigation_bar", previous_path: lines_user_bot_broadcasts_path, title: "配信条件一覧" %>

  <div class="field-header"><%= "Content" %></div>
  <%= render "lines/user_bot/field_row" do %>
    <p class="p-6 bg-gray rounded break-line-content">
      <%= @broadcast.content %>
    </p>
  <% end %>

  <div class="field-header"><%= "Target" %></div>
  <%= render "lines/user_bot/field_row", title: @broadcast.targets %>

  <div class="field-header"><%= "Recipient Count" %></div>
  <%= render "lines/user_bot/field_row", title: @broadcast.recipients_count %>

  <div class="field-header"><%= "State" %></div>
  <%= render "lines/user_bot/field_row", title: @broadcast.state %>

  <div class="field-header"><%= "Broadcasts At" %></div>
  <%= render "lines/user_bot/field_row", title: I18n.l(@broadcast.broadcast_at, format: :long_date_with_wday) %>

  <p class="action-block break-line-content warning">
    <% if @broadcast.active? %>
      If you want to edit the broadcast, you have to stop it first.
    <% elsif @broadcast.draft? %>
      After you finish the broadcast editing, the broadcast would become active.
    <% end %>
  </p>

  <%= render "lines/user_bot/bottom_navigation_bar", klass: "centerize" do %>
    <span><%= I18n.t("common.updated_date") %> <%= I18n.l(@broadcast.updated_at, format: :long_date) %></span>
    <% if @broadcast.active? %>
      <%= link_to  draft_lines_user_bot_broadcast_path(@broadcast), method: :put , data: { confirm: "Are you sure to stop the broadcast?" }, class: "btn btn-orange btn-circle btn-save btn-tweak btn-with-word" do %>
        <i class="fa fa-ban fa-2x"></i>
        <div class="word"><%= "STOP" %></div>
      <% end %>
    <% elsif @broadcast.draft? %>
      <%= link_to  edit_lines_user_bot_broadcast_path(@broadcast), class: "btn btn-yellow btn-circle btn-save btn-tweak btn-with-word" do %>
        <i class="fa fa-pencil-alt fa-2x"></i>
        <div class="word"><%= I18n.t("action.edit") %></div>
      <% end %>
    <% end %>
  <% end %>
</div>
