<div id="login">
  <h2><%= t("devise.registrations.signup_title") %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= t("devise.registrations.min_password", min_length: @minimum_password_length) %>)</em><br />
      <% end %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit t("devise.registrations.signup_btn"), class: "BTNorange" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
